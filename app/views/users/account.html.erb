<style>
  /* General Styles */
  body {
    background-color: rgba(0, 0, 0, 0.9); /* Darker background */
    color: #FFFFFF; /* White text for readability */
    font-family: Arial, sans-serif; /* Modern and clean font */
  }

  .container {
    max-width: 800px;
    margin: auto;
    padding: 20px;
  }

  /* Avatar Styling */
  .avatar {
    border-radius: 50%;
    width: 100px;
    height: 100px;
    object-fit: cover;
    border: 2px solid #FFD700; /* Gold border */
    padding: 5px;
    background-color: #000; /* Black background for contrast */
  }

  /* Section Titles */
  .section-title {
    color: #FFD700; /* Gold titles */
    font-weight: bold;
    border-bottom: 2px solid #FFD700; /* Gold underline */
    padding-bottom: 5px;
  }

  /* Buttons */
  .btn-link {
    color: #4169E1; /* Royal Blue */
    text-decoration: none;
    font-weight: bold;
  }

  .btn-link:hover {
    color: #FFD700; /* Gold on hover */
  }

  /* List Styling */
  .list-group-item {
    background-color: rgba(255, 255, 255, 0.1); /* Transparent white */
    color: #FFFFFF; /* White text */
    border: none;
    border-bottom: 1px solid #2E2E2E; /* Subtle dark gray border */
  }

  .list-group-item strong {
    color: #FFD700; /* Gold emphasis */
  }

  .list-group {
    padding: 10px 0;
  }
</style>

<body>
  <div class="container mt-4 text-center">
    <!-- User Avatar and Greeting -->
    <% if @user.avatar.attached? %>
      <%= image_tag @user.avatar, class: "avatar" %>
    <% else %>
      <%= image_tag 'default_profile.png', class: "avatar" %>
    <% end %>
    <h3 class="mt-3" style="color: #FFD700;">Welcome, <span class="font-italic"><%= current_user.first_name %> <%= current_user.last_name %></span></h3>
    
    <!-- Edit Profile Button -->
    <a href="account/edit" class="btn btn-link mt-2" style="color: skyblue">
      Edit Profile
    </a>
  </div>

  <div class="container mt-5">
    <!-- User Information -->
    <div class="section-title">User Information</div>
    <ul class="list-group">
      <li class="list-group-item">Account Creation Date: <strong><%= current_user.created_at.strftime('%B %d, %Y') %></strong></li>
      <li class="list-group-item">Username: <strong><%= current_user.username %></strong></li>
      <li class="list-group-item">Email: <strong><%= current_user.email %></strong></li>
      <li class="list-group-item">First Name: <strong><%= current_user.first_name %></strong></li>
      <li class="list-group-item">Last Name: <strong><%= current_user.last_name %></strong></li>
      <li class="list-group-item">Date of Birth: <strong><%= current_user.date_of_birth %></strong></li>
      <li class="list-group-item">Phone Number: <strong><%= current_user.phone %></strong></li>
      <li class="list-group-item">Country: <strong><%= current_user.country.name %></strong></li>
      <li class="list-group-item">Bio: <strong><%= current_user.bio %></strong></li>
    </ul>
  </div>
</body>
