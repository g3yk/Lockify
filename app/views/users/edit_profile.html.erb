<% content_for :head do %>
  <%= stylesheet_link_tag 'Ana-Sayfa' %>

<% end %>

<style>
  body {
    background-color: rgba(0, 0, 0, 0.9); /* Darker background for consistency */
    color: #FFFFFF; /* White text for readability */
    font-family: Arial, sans-serif;
  }

  .container {
    max-width: 800px;
    margin: auto;
    padding: 20px;
  }

  .form-container {
    backdrop-filter: blur(10px);
    background-color: rgba(255, 255, 255, 0.1); /* Subtle transparent background */
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.5);
  }

  h1 {
    text-align: center;
    color: #FFD700; /* Gold title for elegance */
    margin-bottom: 20px;
  }

  label {
    color: #FFD700; /* Gold for labels */
    font-weight: bold;
  }

  .u-input {
    width: 100%;
    padding: 10px;
    margin: 10px 0;
    border: 1px solid #2E2E2E;
    border-radius: 5px;
    background-color: rgba(255, 255, 255, 0.1);
    color: #FFFFFF;
  }

  .form-control-file {
    margin-top: 10px;
  }

  .u-btn-submit {
    display: inline-block;
    background-color: rgba(0, 0, 0, 0.5);
    color: #FFD700; /* Gold on hover */
    border: none;
    padding: 10px 20px;
    border-radius: 10px;
    font-weight: bold;
    cursor: pointer;
    text-decoration: none;
  }

  .u-btn-submit:hover {
    background-color: #FFD700; /* Gold on hover */
    color: #000;
  }

  .u-form-send-message {
    display: none;
    margin-top: 15px;
  }

  .success {
    color: #32CD32; /* Lime Green for success */
  }

  .error {
    color: #FF4500; /* Orange Red for error */
  }
</style>

<body>
  <div class="container">
    <h1>Edit Profile</h1>
    <div class="form-container">
      <%= form_with model: @user, local: true, url: update_profile_path, class: "signup-form", method: :put do |form| %>
        <%= render partial: "shared/form_errors", locals: { object: form.object } %>

        <div class="form-group">
          <%= form.label :email, "Email" %>
          <%= form.email_field :email, placeholder: "Geçerli bir e-posta adresi girin", class: "u-input", required: true, disabled: true %>
        </div>

        <div class="form-group">
          <%= form.label :username, "Username" %>
          <%= form.text_field :username, placeholder: "Username giriniz", class: "u-input", required: true %>
        </div>

        <div class="form-group">
          <%= form.label :bio, "Biyografi" %>
          <%= form.text_area :bio, placeholder: "Biyografi giriniz", rows: 4, class: "u-input" %>
        </div>

        <div class="form-group">
          <%= form.label :first_name, "Adı" %>
          <%= form.text_field :first_name, placeholder: "Adınızı Girin", class: "u-input", required: true %>
        </div>

        <div class="form-group">
          <%= form.label :last_name, "Soyadı" %>
          <%= form.text_field :last_name, placeholder: "Soyadınızı Girin", class: "u-input", required: true %>
        </div>

        <div class="form-group">
          <%= form.label :date_of_birth, "Doğum Tarihiniz" %>
          <%= form.date_field :date_of_birth, placeholder: "AY/GÜN/YIL", class: "u-input", required: true %>
        </div>

        <div class="form-group">
          <%= form.label :country_id, "Ülke" %>
          <%= form.select :country_id, options_for_select(Country.all.pluck(:name, :id)), { prompt: "Bir ülke seçin" }, class: "u-input", required: true %>
        </div>

        <div class="form-group">
          <%= form.label :avatar, "Avatar" %>
          <%= form.file_field :avatar, accept: 'image/png,image/jpeg,image/jpg', class: "form-control-file" %>
        </div>

        <div class="form-group text-center">
          <%= form.submit "Kaydet", class: "u-btn-submit" %>
        </div>

        <div class="u-form-send-message success">
          Teşekkür ederiz! Mesajınız gönderildi.
        </div>

        <div class="u-form-send-message error">
          Mesajınız gönderilemedi. Lütfen hataları düzeltin ve tekrar deneyin.
        </div>
      <% end %>
    </div>
  </div>
</body>
