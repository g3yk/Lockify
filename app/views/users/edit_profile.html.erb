<% end %>

<style>
  /* General page styles */
  body {
    background-color: rgba(0, 0, 0, 0.9); /* Darker background */
    color: #FFFFFF; /* White text */
    font-family: Arial, sans-serif;
  }

  /* Form container */
  .container {
    max-width: 800px; /* Medium width */
    margin: auto;
    padding: 20px;
  }

  /* Form styling */
  .form-container {
    backdrop-filter: blur(10px); /* Subtle blur effect */
    background-color: rgba(255, 255, 255, 0.1); /* Transparent background */
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.5); /* Shadow for depth */
  }

  /* Title styles */
  h1 {
    text-align: center;
    color: #FFD700; /* Gold color for title */
    margin-bottom: 20px;
  }

  /* Label styles */
  label {
    color: #FFD700; /* Gold color for labels */
    font-weight: bold;
  }

  /* Input field styles */
  .u-input {
    width: 100%;
    padding: 10px;
    margin: 10px 0;
    border: 1px solid #2E2E2E;
    border-radius: 5px;
    background-color: rgba(255, 255, 255, 0.1);
    color: #FFFFFF;
  }

  /* File input styles */
  .form-control-file {
    margin-top: 10px;
  }

  /* Submit button styles */
  .u-btn-submit {
    display: inline-block;
    background-color: rgba(0, 0, 0, 0.5);
    color: #FFD700; /* Gold text */
    border: none;
    padding: 10px 20px;
    border-radius: 10px;
    font-weight: bold;
    cursor: pointer;
    text-decoration: none;
  }

  .u-btn-submit:hover {
    background-color: #FFD700; /* Gold background on hover */
    color: #000; /* Black text on hover */
  }

  /* Success and error messages */
  .u-form-send-message {
    display: none;
    margin-top: 15px;
  }

  .success {
    color: #32CD32; /* Lime Green for success */
  }

  .error {
    color: #FF4500; /* Orange Red for error */
  }
</style>

<body>
  <div class="container">
    <h1>Edit Profile</h1>
    <div class="form-container">
      <%= form_with model: @user, local: true, url: update_profile_path, class: "signup-form", method: :put do |form| %>
        <%= render partial: "shared/form_errors", locals: { object: form.object } %>

        <!-- Email Field (Disabled) -->
        <div class="form-group">
          <%= form.label :email, "Email" %>
          <%= form.email_field :email, placeholder: "Enter a valid email address", class: "u-input", required: true, disabled: true %>
        </div>

        <!-- Username Field -->
        <div class="form-group">
          <%= form.label :username, "Username" %>
          <%= form.text_field :username, placeholder: "Enter your username", class: "u-input", required: true %>
        </div>

        <!-- Bio Field -->
        <div class="form-group">
          <%= form.label :bio, "Biography" %>
          <%= form.text_area :bio, placeholder: "Enter your biography", rows: 4, class: "u-input" %>
        </div>

        <!-- First Name Field -->
        <div class="form-group">
          <%= form.label :first_name, "First Name" %>
          <%= form.text_field :first_name, placeholder: "Enter your first name", class: "u-input", required: true %>
        </div>

        <!-- Last Name Field -->
        <div class="form-group">
          <%= form.label :last_name, "Last Name" %>
          <%= form.text_field :last_name, placeholder: "Enter your last name", class: "u-input", required: true %>
        </div>

        <!-- Date of Birth Field -->
        <div class="form-group">
          <%= form.label :date_of_birth, "Date of Birth" %>
          <%= form.date_field :date_of_birth, placeholder: "MM/DD/YYYY", class: "u-input", required: true %>
        </div>

        <!-- Country Selection Field -->
        <div class="form-group">
          <%= form.label :country_id, "Country" %>
          <%= form.select :country_id, options_for_select(Country.all.pluck(:name, :id)), { prompt: "Select a country" }, class: "u-input", required: true %>
        </div>

        <!-- Avatar Upload Field -->
        <div class="form-group">
          <%= form.label :avatar, "Avatar" %>
          <%= form.file_field :avatar, accept: 'image/png,image/jpeg,image/jpg', class: "form-control-file" %>
        </div>

        <!-- Submit Button -->
        <div class="form-group text-center">
          <%= form.submit "Save", class: "u-btn-submit" %>
        </div>

        <!-- Success Message -->
        <div class="u-form-send-message success">
          Thank you! Your message has been sent.
        </div>

        <!-- Error Message -->
        <div class="u-form-send-message error">
          Your message could not be sent. Please correct the errors and try again.
        </div>
      <% end %>
    </div>
  </div>
</body>
