<% content_for :head do %>
  <%= stylesheet_link_tag 'style' %>
<% end %>

<body style="background-color: rgba(255, 255, 255, 0.9);">
  <div class="container">
    <!-- Post Details -->
    <div class="banner d-flex flex-column justify-content-center align-items-center" style="gap: 2rem; padding: 2rem;">
      <h3 class="text-dark mt-2"><%= "#{@post.title}" %></h3>
      <p class="text-secondary"><%= @post.created_at.strftime("%B %d, %Y") %></p>
      
      <% if @post.avatar.attached? %>
        <%= image_tag @post.avatar, width: "200px", height: "200px", class: "rounded img-fluid" %>
      <% else %>
        <%= image_tag 'default_post.png', width: "200px", height: "200px", class: "rounded img-fluid" %>
      <% end %>

      <p class="text-dark mt-3">
        <%= @post.content %>
      </p>
    </div>
  </div>
</body>
