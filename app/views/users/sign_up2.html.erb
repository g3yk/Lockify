<% content_for :head do %>
  <%= stylesheet_link_tag 'Sayfa-1' %>
<% end %>

<style>
  .header {
    background-color: rgba(0, 0, 0, 0.8);
  }

  .img-vibrant {
    border-radius: 15px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    filter: brightness(1.1) contrast(1.2);
  }

  .img-vibrant:hover {
    transform: scale(1.05);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
  }

  .background-container {
    background-image: url('<%= asset_path 'foto-register.jpg' %>');
    background-size: cover;
    background-position: center;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .form-container {
    background-color: rgba(255, 255, 255, 0.8);
    padding: 30px;
    border-radius: 15px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    max-width: 500px;
    width: 100%;
  }
</style>

<section class="container-fluid p-0">
  <div class="row no-gutters background-container">
    <div class="col-lg-6 d-flex justify-content-center align-items-center">
      <div class="form-container">
        <h2 class="text-center mb-4">Kayıt Ol</h2>
        <%= form_with model: @user, url: sign_up_path, class: "signup-form" do |form| %>
          <%= render partial: "shared/form_errors", locals: { object: form.object } %>

          <!-- Kullanıcı Adı -->
          <%= form.group :username, class: "mb-3" do %>
            <%= form.label :username, "Kullanıcı Adı", class: "form-label" %>
            <%= form.text_field :username, placeholder: "Kullanıcı Adı Giriniz", class: "form-control", required: true %>
          <% end %>

          <!-- E-Posta -->
          <%= form.group :email, class: "mb-3" do %>
            <%= form.label :email, "E-Posta", class: "form-label" %>
            <%= form.email_field :email, placeholder: "Geçerli bir e-posta adresi girin", class: "form-control", required: true %>
          <% end %>

          <!-- Adı -->
          <%= form.group :first_name, class: "mb-3" do %>
            <%= form.label :first_name, "Adı", class: "form-label" %>
            <%= form.text_field :first_name, placeholder: "Adınızı Girin", class: "form-control", required: true %>
          <% end %>

          <!-- Soyadı -->
          <%= form.group :last_name, class: "mb-3" do %>
            <%= form.label :last_name, "Soyadı", class: "form-label" %>
            <%= form.text_field :last_name, placeholder: "Soyadınızı Girin", class: "form-control", required: true %>
          <% end %>

          <!-- Doğum Tarihi -->
          <%= form.group :date_of_birth, class: "mb-3" do %>
            <%= form.label :date_of_birth, "Doğum Tarihiniz", class: "form-label" %>
            <%= form.date_field :date_of_birth, placeholder: "AY/GÜN/YIL", class: "form-control", required: true %>
          <% end %>

          <!-- Ülke -->
          <%= form.group :country_id, class: "mb-3" do %>
            <%= form.label :country_id, "Ülke", class: "form-label" %>
            <%= form.select :country_id, options_for_select(Country.all.pluck(:name, :id)), { prompt: "Bir ülke seçin" }, id: "user_country_id", class: "form-control", required: true %>
          <% end %>

          <!-- Şifre -->
          <%= form.group :password, class: "mb-3" do %>
            <%= form.label :password, "Şifre Giriniz", class: "form-label" %>
            <%= form.password_field :password, placeholder: "Şifre", class: "form-control", required: true %>
          <% end %>

          <!-- Şifre Doğrulama -->
          <%= form.group :password_confirmation, class: "mb-3" do %>
            <%= form.label :password_confirmation, "Şifrenizi Doğrulayın", class: "form-label" %>
            <%= form.password_field :password_confirmation, placeholder: "Şifre Doğulayın", class: "form-control", required: true %>
          <% end %>

          <!-- Kayıt Ol Butonu -->
          <div class="text-center">
            <%= form.submit "Kayıt Ol", class: "btn btn-primary w-100", style: "background-color: rgba(48, 151, 209, 1);" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
