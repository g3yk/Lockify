                                                <% if user.avatar.attached? %>
                                                    <%= image_tag user.avatar, width: "45px", height: "45px", class: "rounded-circle avatar" %>
                                                <% else %>
                                                    <%= image_tag 'default_profile.png', width: "45px", height: "45px", class: "rounded-circle avatar" %>
                                                <% end %>
