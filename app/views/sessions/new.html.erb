<% content_for :head do %>
  <%= stylesheet_link_tag 'signup' %> <!-- Link to your specific CSS file -->
<% end %>

<h2>Login</h2>

<%= form_with url: login_path, scope: :user do |form| %>

  <% if flash.now[:alert] %>
    <div style="color: red; text-align: center; font-style: italic">
      <%= flash.now[:alert] %>
    </div>
  <% end %>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email, required: true %>
  </div>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password, required: true %>
  </div>
  <%= form.submit "Sign In" %>
<% end %>
