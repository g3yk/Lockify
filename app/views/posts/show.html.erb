<style>
/* General Dark Theme */
body {
  background-color: rgba(0, 0, 0, 0.9); /* Dark background */
  color: #e0e0e0; /* Light text for contrast */
  font-family: Arial, sans-serif; /* Simple, clean font */
  margin: 0; /* Reset body margin */
  padding: 0; /* Reset body padding */
  display: flex;
  flex-direction: column; /* Stack header, content, and footer vertically */
  min-height: 100vh; /* Full viewport height */
}



footer {
  margin-top: auto; /* Push footer to the bottom */
}

/* Post container styling */
.post-container {
  background-color: #1d1d1d; /* Dark card background */
  padding: 2rem; /* Spacing inside the container */
  border-radius: 10px; /* Rounded corners */
  text-align: center; /* Center all text */
  width: 80%; /* Set a reasonable width */
  max-width: 600px; /* Limit max width */
  margin: auto; /* Center content horizontally and vertically */
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Subtle shadow for depth */
}

.post-container h1 {
  color: #FFD700; /* Golden title */
  margin-bottom: 1rem;
}

.post-container p {
  color: #e0e0e0; /* Light text for content */
  margin-bottom: 1.5rem; /* Space below paragraphs */
}

.post-container .post-images img {
  border-radius: 8px; /* Rounded corners */
  width: 100%; /* Full-width images */
  max-width: 400px; /* Limit image size */
  height: auto; /* Maintain aspect ratio */
  margin-bottom: 1.5rem; /* Space below images */
  border: 2px solid #2c2c2c; /* Image border */
}

/* Buttons styling */
.button-container {
  display: flex;
  justify-content: center;
  gap: 10px; /* Space between buttons */
  margin-top: 1.5rem; /* Space above buttons */
}

.button-container button {
  background-color: #2c2c2c; /* Darker button background */
  color: #FFD700; /* Golden text color */
  border: 1px solid #3a3a3a; /* Border for buttons */
  padding: 0.5rem 1.5rem; /* Button padding */
  border-radius: 6px; /* Rounded corners */
  cursor: pointer;
  transition: background-color 0.3s ease, color 0.3s ease; /* Smooth hover effects */
}

.button1:hover {
  background-color: #3a3a3a; /* Slightly lighter on hover */
  color: #e0e0e0; /* Light text color on hover */
}
.delete-button:hover {
  background-color: #FF0000; /* Red background on hover */
  color: #FFFFFF; /* White text on hover */

}

</style>


<div class="post-container">
  <!-- Post Title -->
  <h1><%= @post.title %></h1>

  <!-- Post Content -->
  <p><%= @post.content %></p>

 <!-- Post Image -->
<% if @post.avatar.attached? %>
  <div class="post-images">
    <!-- Display the latest attached image -->
    <%= image_tag @post.avatar.first, alt: "Post Image", class: "img-fluid", style: 'width: 100%; height: 250px; object-fit: cover;' %>
  </div>
<% end %>

  <!-- Buttons for Edit and Delete -->
  <% if current_user == @post.user %>
    <div class="button-container">
      <%= button_to "Edit", edit_post_path(@post), class: "button1", method: :get %>
      <%= button_to "Delete", delete_post_path(@post), class: "delete-button", method: :delete, data: { confirm: "Are you sure you want to delete this post?" } %>
    </div>
  <% end %>
</div>
